# ===================
# REQUIRED
# ===================

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/primetrack?sslmode=require

# Session & Encryption (generate with: openssl rand -base64 32)
SESSION_SECRET=your-session-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# App
NODE_ENV=production
# PORT is provided by Koyeb automatically

# Platform domain (your main app URL)
APP_DOMAIN=https://primetrack.yourdomain.com
PLATFORM_DOMAIN=primetrack.yourdomain.com

# ===================
# EMAIL (Required for notifications)
# ===================
RESEND_API_KEY=your-resend-api-key

# ===================
# OPTIONAL
# ===================

# Telegram notifications
TELEGRAM_NOTIFY_BOT_TOKEN=your-telegram-notify-bot-token
TELEGRAM_SUPPORT_BOT_TOKEN=your-telegram-support-bot-token

# IP Intelligence (ipinfo.io)
IPINFO_TOKEN=your-ipinfo-token

# Cloudflare (for custom domains)
CLOUDFLARE_API_TOKEN=your-cloudflare-token
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_WORKER_SECRET=your-worker-secret
PLATFORM_CNAME_TARGET=customers.primetrack.pro

# CORS (comma-separated origins if needed)
CORS_ORIGIN=https://primetrack.yourdomain.com

# Admin setup key (for initial admin creation)
SETUP_KEY=your-setup-key
